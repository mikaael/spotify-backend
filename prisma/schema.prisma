generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  gender_id   Int
  region_id   Int
  email       String     @unique
  password    String
  username    String
  profile_url String
  birth_date  DateTime
  playlists   Playlist[]
}

model Author {
  id   Int    @id @default(autoincrement())
  name String @unique

  songs Song[]
}

model Song {
  id                  Int    @id @default(autoincrement())
  album_id            Int?
  title               String
  cover_url           String
  audio_url           String
  duration_in_seconds Int

  songs     SongOnPlaylist[]
  author    Author?          @relation(fields: [author_id], references: [id])
  author_id Int?
}

model Playlist {
  id          Int              @id @default(autoincrement())
  title       String
  description String?
  cover_url   String?
  songs       SongOnPlaylist[]
  user        User             @relation(fields: [user_id], references: [id])
  user_id     Int
}

model SongOnPlaylist {
  id          Int      @id @default(autoincrement())
  added_at    DateTime
  playlist    Playlist @relation(fields: [playlist_id], references: [id])
  playlist_id Int
  song        Song     @relation(fields: [song_id], references: [id])
  song_id     Int
}
