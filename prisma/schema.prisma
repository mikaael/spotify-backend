generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  gender_id   Int
  region_id   Int
  email       String     @unique
  password    String
  username    String
  profile_url String
  birth_date  DateTime
  playlists   Playlist[]
}

model Playlist {
  id     Int    @id @default(autoincrement())
  title  String
  description String?
  cover_url String?
  songs SongOnPlaylist[]
  user   User  @relation(fields: [userId], references: [id])
  userId Int
}

model SongOnPlaylist {
  id     Int    @id @default(autoincrement())
  added_at  DateTime
  playlist   Playlist  @relation(fields: [playlistId], references: [id])
  playlistId Int
  song   Song  @relation(fields: [songId], references: [id])
  songId Int
}

model Song {
  id     Int    @id @default(autoincrement())
  album_id  Int?
  author_id Int
  title String
  cover_url String
  audio_url String
  duration_in_seconds Int
  songs SongOnPlaylist[]
}
